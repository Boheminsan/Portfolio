@model Project
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* start portfolio section*@
<section class="project-area">
    <div class="container">
        <div class="project-title pb-5">
            <h1 class="letterspaced text-uppercase text-center title-h1">Taslak projeler</h1>
        </div>
    </div>
    <div class="button-group">
        <button type="button" class="active" id="btn0" data-filter="*">Tümü</button>
        @foreach (var type in (List<Category>)ViewBag.SelectedCategories)
        {
            if (type.CType == CategoryType.Lang)
            {
                <button type="button" class="" id="btn@type.CategoryId" data-filter="@type.Filter">@type.CategoryName
                </button>
            }
        }
    </div>
    <div class="button-group">
        @foreach (var type in (List<Category>)ViewBag.SelectedCategories)
        {
            if (type.CType == CategoryType.Tech)
            {
                <button type="button" class="" id="btn@type.CategoryId" data-filter="@type.Filter">@type.CategoryName
                </button>
            }
        }
    </div>
    <div class="row grid">
        @{
            var categories = (List<Category>)ViewBag.SelectedCategories;
            var classes = "";
            foreach (var cat in categories)
            {
                if (Model.Categories.Any(z => z.CategoryId == cat.CategoryId))
                {
                    classes += cat.Filter.Replace(".", "") + " ";
                }
            }
            <div class="col-lg-3 col-md-6 col-sm-12 element-item @classes">
                @* kategoriler class *@
                <div class="our-project">
                    <div class="img">
                        <a class="test-popup-link" href="/Projects/Draft/@Model.ProjectId">
                            <img src="~/assets/img/portfolio/@Model.CoverImage" alt="@Model.Title" class="img-fluid">
                        </a>
                    </div>
                    <div class="title py-4">
                        <h4 class="text-uppercase">@Model.Title</h4>
                        <span class="text-secondary">@Model.Text</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
@* end portfolio section*@