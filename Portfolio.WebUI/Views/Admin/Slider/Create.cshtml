@{
    ViewData["Title"] = "Yeni Slider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model Slider
<div class="container mt-4 pt-4">
    <div class="row">
        <div class="col-md-10">
            <div class="text-center">
                <h2>Yeni Slider</h2>
            </div>
            <div class="container">
                <form asp-controller="Slider" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div class="mb-3 mt-4">
                        <div id="gizle" class="btn btn-sm btn-outline-primary">Gizle/Göster</div>
                        <div class="btn btn-sm btn-outline-success" id="secimiTemizle">Seçimi Temizle</div>
                        @if (ViewBag.Images != null)
                        {
                            <div class="row" id="gallery">
                                @foreach (var item in (List<Image>)ViewBag.Images)
                                {
                                    <div class="form-check col-lg-3 col-xl-2">
                                        <input class="form-check-input" type="radio" name="imgId" value="@item.ImageId"
                                    id="img_@item.ImageId">
                                        <label class="form-check-label" for="img_@item.ImageId">
                                            <img class="img-fluid" src="~/@item.FullPath/@item.ImageName" alt="@item.ImageName">
                                        </label>
                                    </div>
                                }
                            </div>
                        }
                        <div class="row w-75" id="tekli">
                            <input type="file" name="file" id="file" class="form-control">
                        </div>
                    </div>
                    <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" id="isHomeBool" name="isHomeBool">
                        <label class="form-check-label" for="isHomeBool">
                            Anasayfada mı? </label>
                    </div>
                    <button type="submit" class="btn btn-success">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
</div>
