@model SliderImageSingleViewModel
<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Slider" asp-action="Update" method="post">
                <input type="hidden" name="Slider.SliderId" value="@Model.Slider.SliderId">
                <input type="hidden" name="Img.ImageId" value="@Model.Img.ImageId">
                <div class="mb-3">
                    <label class="form-label" asp-for="Img.ImageName"></label>
                    <input asp-for="Img.ImageName" class="form-control" value="@Model.Img.ImageName">
                    <img src="~/assets/@Model.Img.Path/@Model.Img.ImageName" width="150" alt="@Model.Img.ImageName">
                    <span asp-validation-for="Img.ImageName"></span>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" @(Model.Slider.isHome?"checked":"") id="isHomeBool"
                        name="isHomeBool">
                    <label class="form-check-label" for="isHomeBool">
                        Anasayfada mÄ±? </label>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>