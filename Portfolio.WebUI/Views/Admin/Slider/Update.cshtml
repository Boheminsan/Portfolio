@model Slider
<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Slider" asp-action="Update" method="post">
                <input type="hidden" name="SliderId" value="@Model.SliderId">
                <div class="mb-3">
                    <label class="form-label" asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" value="@Model.Image">
                    <img src="~/ides/@Model.Image" width="150" alt="">
                    <span asp-validation-for="Image"></span>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="isHome" id="isHome"
                        @(Model.isHome?"checked":"")>
                    <label class="form-check-label" for="isHome">
                        Anasayfada mÄ±? </label>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>