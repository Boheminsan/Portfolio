@model SliderImageSingleViewModel
<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Slider" asp-action="Update" method="post">
                <input type="hidden" name="SliderId" value="@Model.Slider.SliderId">
                <div class="mb-3">
                    <label class="form-label" asp-for="Slider.Image"></label>
                    <input asp-for="Slider.Image" class="form-control" value="@Model.Img.ImageName">
                    <img src="~/assets/@Model.Img.Path/@Model.Img.ImageName" width="150" alt="">
                    <span asp-validation-for="Slider.Image"></span>
                </div>
                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="isHome" id="isHome"
                        @(Model.Slider.isHome?"checked":"")>
                    //hatalı buraya bak
                    <label class="form-check-label" for="isHome">
                        Anasayfada mı? </label>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>