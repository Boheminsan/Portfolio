@{
    ViewData["Title"] = "Slider Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SliderImageViewModel
<div class="col-md-12 mt-2 border border-primary">
    <div class="title-text text-center row mb-1">
        <div class="col-md-9">
            <h2 style="display:inline">Slider</h2>
        </div>
        <div class="col-md-3"><a href="/Admin/Slider/Create/" class="btn btn-success me-2 btn-md">Yeni</a>
        </div>
    </div>
    <table class="table table-bordered table-hover table-text admin">
        <thead>
            <tr class="text-center">
                <th scope="col" style="width:3%">#</th>
                <th scope="col">Resim</th>
                <th scope="col">isHome</th>
                <th scope="col" style="width: 25%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var slider in Model.Sliders)
            {
                <tr>
                    <th scope="row">@slider.SliderId</th>
                    <td class="text-center">
                        <img src="~/assets/@slider.Image.Path/@slider.Image.ImageName" alt="@slider.Image.ImageName"
                        width="100">
                    </td>
                    <td>@slider.isHome</td>
                    <td class="d-flex justify-content-center">
                        <a href="/Admin/Slider/Update/@slider.SliderId"
                        class="btn btn-info text-light me-2 btn-md">Düzenle</a>
                        <form action="/Admin/Slider/Delete/" method="POST">
                            <input type="hidden" name="SliderId" value="@slider.SliderId">
                            <input type="hidden" name="ImageId" value="@slider.ImageId">
                            <button type="submit" class="btn btn-danger btn-md">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>