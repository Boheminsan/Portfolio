@{
    ViewData["Title"] = "Yorumlar Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Testimonial>
<div class="col-md-12 mt-2 border border-primary">
    <div class="title-text text-center row mb-1">
        <div class="col-md-9">
            <h2 style="display:inline">Yorumlar</h2>
        </div>
        <div class="col-md-3"><a href="/Admin/Testimonial/Create/" class="btn btn-success me-2 btn-md">Yeni</a>
        </div>
    </div>
    <table class="table table-bordered table-hover table-text admin">
        <thead>
            <tr class="text-center">
                <th scope="col" style="width:3%">#</th>
                <th scope="col">Image</th>
                <th scope="col">Başlık</th>
                <th scope="col">Yazı</th>
                <th scope="col">isHome</th>
                <th scope="col" style="width: 25%;">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var test in Model)
            {
                <tr>
                    <th scope="row">@test.TestimonialId</th>
                    <td>@test.Image</td>
                    <td>@test.Title</td>
                    <td>@test.Text</td>
                    <td>@test.isHome</td>
                    <td class="d-flex justify-content-center">
                        <a href="/Admin/Testimonial/Update/@test.TestimonialId"
                        class="btn btn-info text-light me-2 btn-md">Düzenle</a>
                        <form action="/Admin/Testimonial/Delete/" method="POST">
                            <input type="hidden" name="TestimonialId" value="@test.TestimonialId">
                            <button type="submit" class="btn btn-danger btn-md">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>