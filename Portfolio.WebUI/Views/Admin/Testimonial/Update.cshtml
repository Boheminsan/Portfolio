@model Testimonial
<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Testimonial" asp-action="Update" method="post">
                <input type="hidden" name="TestimonialId" value="@Model.TestimonialId">
                <div class="mb-3">
                    <label class="form-label" asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" value="@Model.Title">
                    <span asp-validation-for="Title"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Text"></label>
                    <textarea asp-for="Text" class="form-control" cols="10" rows="5">@Model.Text</textarea>
                    <span asp-validation-for="Text"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Image"></label>
                    <input asp-for="Image" class="form-control" value="@Model.Image">
                    <img src="@Model.Image" width="150" alt="">
                    <span asp-validation-for="Image"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input class="form-check-input" type="checkbox" name="isHome" id="isHome"
                        @(Model.isHome?"checked":"")>
                    <label class="form-check-label" for="isHome">
                        Anasayfada mÄ±? </label>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>
