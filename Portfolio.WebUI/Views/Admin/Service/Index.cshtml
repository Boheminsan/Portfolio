@{
    ViewData["Title"] = "Servisler Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Service>
<div class="col-md-12 mt-2 border border-primary">
    <div class="title-text text-center row mb-1">
        <div class="col-md-9">
            <h2 style="display:inline">Servisler</h2>
        </div>
        <div class="col-md-3"><a href="/Admin/Service/Create/" class="btn btn-success me-2 btn-md">Yeni</a>
        </div>
    </div>
    <table class="table table-bordered table-hover table-text admin">
        <thead>
            <tr class="text-center">
                <th scope="col" style="width:3%">#</th>
                <th scope="col">Resim</th>
                <th scope="col">Başlık</th>
                <th scope="col">Metin</th>
                <th scope="col">isHome</th>
                <th scope="col" style="width: 25%;">İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <th scope="row">@service.ServiceId</th>
                    <td>@service.Image</td>
                    <td>@service.Title</td>
                    <td>@service.Text</td>
                    <td>@service.isHome</td>
                    <td class="d-flex justify-content-center">
                        <a href="/Admin/Service/Update/@service.ServiceId"
                        class="btn btn-info text-light me-2 btn-md">Düzenle</a>
                        <form action="/Admin/Service/Delete/" method="POST">
                            <input type="hidden" name="ServiceId" value="@service.ServiceId">
                            <button type="submit" class="btn btn-danger btn-md">Sil</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>