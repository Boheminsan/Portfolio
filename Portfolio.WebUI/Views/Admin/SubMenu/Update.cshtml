@{
    ViewData["Title"] = "Alt Menü Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SubMenu
<div class="container mt-4 pt-4">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="SubMenu" asp-action="Update" method="post">
                <input type="hidden" name="SubMenuId" value="@Model.SubMenuId">
                <div class="mb-3">
                    <label class="form-label" asp-for="SubMenuName"></label>
                    <input asp-for="SubMenuName" class="form-control" value="@Model.SubMenuName">
                    <span asp-validation-for="SubMenuName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Link"></label>
                    <input asp-for="Link" class="form-control" value="@Model.Link">
                    <span asp-validation-for="Link"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="MenuItemId"></label>
                    <input asp-for="MenuItemId" class="form-control" value="@Model.MenuItemId">
                    <span asp-validation-for="MenuItemId"></span>
                </div>

                @* alt menüleri checkbox ile çek *@
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>