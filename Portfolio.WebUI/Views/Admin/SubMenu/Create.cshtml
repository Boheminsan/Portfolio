@{
    ViewData["Title"] = "Yeni ALt Men√º Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model SubMenu
<div class="container mt-4 pt-4">
    @* ViewBag.Message getir *@
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form asp-controller="SubMenu" asp-action="Create" method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="SubMenuName"></label>
                    <input asp-for="SubMenuName" class="form-control">
                    <span asp-validation-for="SubMenuName"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Link"></label>
                    <input asp-for="Link" class="form-control">
                    <span asp-validation-for="Link"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="MenuItemId"></label>
                    <input asp-for="MenuItemId" class="form-control">
                    <span asp-validation-for="MenuItemId"></span>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>