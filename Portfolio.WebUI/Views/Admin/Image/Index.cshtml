@{
    ViewData["Title"] = "Resimler Anasayfa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<Image>
<div class="col-md-12 mt-2 border border-primary">
    <div class="title-text text-center row mb-1">
        <div class="col-md-9">
            <h2 style="display:inline">Resimler</h2>
        </div>
        <div class="col-md-3">
            <a href="/Admin/Image/Create" class="btn btn-success me-2 btn-md">Yeni</a>
        </div>
    </div>
    <table class="table table-bordered table-hover table-text admin">
        <thead>
            <tr class="text-center">
                <th scope="col" style="width:3%">#</th>
                <th scope="col">Resim Adı</th>
                <th scope="col" style="width: 25%;">İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var img in Model)
            {
                <tr>
                    <th scope="row">@img.ImageId</th>
                    <td class="text-center">
                        <img src="~/@img.FullPath/@img.ImageName" alt="@img.ImageName" width="100">
                    </td>
                    <td class="d-flex justify-content-center">
                        <a href="/Admin/Image/Update/@img.ImageId" class="btn btn-info me-2 btn-md">Düzenle</a>
                        @* <form action="/Admin/Image/Delete/" method="POST">
                            <input type="hidden" name="ImageId" value="@img.ImageId">
                            <button type="submit" class="btn btn-danger btn-md">Sil</button>
                        </form> *@

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>